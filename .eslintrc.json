{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [ "react" ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": { "module": true, "console": true, "fetch": true, "__DEV__": true, "require": true, "alert": true, "setTimeout": true },
  "rules": {
    "comma-dangle": ["error", "never"],
    "react/jsx-uses-vars": 1,
    "react/display-name": 1,
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-unexpected-multiline": "warn",
    "indent": [ "error", 2 ],
    "linebreak-style": [ "error", "unix" ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "never" ]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.6.1"
    }
  }
}
